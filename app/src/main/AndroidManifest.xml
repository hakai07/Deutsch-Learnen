<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.welcome.deutschlerenen">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".Numbers"
            android:label="Numbers"
            android:parentActivityName=".MainActivity"/>
        <activity android:name=".Family_Activity"
            android:label="Family"
            android:parentActivityName=".MainActivity"/>
        <activity android:name=".Colors_Activity"
            android:label="Colors"
            android:parentActivityName=".MainActivity"/>
        <activity android:name=".Phrases_Activity"
            android:label="Phrases"
            android:parentActivityName=".MainActivity"/>
    </application>

</manifest>